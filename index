<body>
  <div class="petals" id="petals"></div>

  <main class="wrap">
    <div class="rose" aria-label="Glowing red rose">
      <div class="glow"></div>

      <div class="petal p1"></div>
      <div class="petal p2"></div>
      <div class="petal p3"></div>
      <div class="petal p4"></div>
      <div class="petal p5"></div>
      <div class="petal p6"></div>

      <div class="petal inner i1"></div>
      <div class="petal inner i2"></div>
      <div class="petal inner i3"></div>
      <div class="petal inner i4"></div>
      <div class="petal inner i5"></div>

      <div class="core"></div>
      <div class="stem"></div>
    </div>

    <div>
      <h1>Happy Rose Day üåπ</h1>
      <div class="sub">Wishing you love, warmth, and smiles.</div>
      <div class="hint">(Tip: refresh to see different falling patterns)</div>
    </div>
  </main>

  <script>
    const petals = document.getElementById("petals");

    // Create falling items mostly on left/right sides
    const COUNT = 55; // increase for more petals
    const symbols = ["üåπ","üçÉ","üå∏","ü•Ä"]; // mix; use only üçÉ if you want ‚Äúleaves‚Äù

    function rand(min, max){ return Math.random() * (max - min) + min; }

    for (let i = 0; i < COUNT; i++) {
      const el = document.createElement("div");
      el.className = "fall";
      el.textContent = symbols[Math.floor(Math.random() * symbols.length)];

      // left side: 0‚Äì18vw, right side: 82‚Äì100vw
      const side = Math.random() < 0.5 ? "left" : "right";
      const x = side === "left" ? rand(0, 18) : rand(82, 100);

      const drift = rand(-8, 8); // horizontal drift in vw
      const rot = rand(360, 1440); // final rotation
      const dur = rand(6, 14); // seconds
      const delay = rand(-12, 0); // negative so they start mid-fall
      const size = rand(16, 30); // px

      el.style.setProperty("--x", `${x}vw`);
      el.style.setProperty("--drift", `${drift}vw`);
      el.style.setProperty("--rot", `${rot}deg`);
      el.style.animationDuration = `${dur}s`;
      el.style.animationDelay = `${delay}s`;
      el.style.fontSize = `${size}px`;
      el.style.opacity = rand(0.5, 0.95);

      petals.appendChild(el);
    }
  </script>
</body>
